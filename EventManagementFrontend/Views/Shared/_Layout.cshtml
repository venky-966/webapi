<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - EventManagementFrontend</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    @{
        var userRole = ViewBag.UserRole as string ?? "";
        string homeUrl = userRole switch
        {
            "Admin" => Url.Action("Index", "Admin"),
            "Participant" => Url.Action("Index", "Participant"),
            _ => Url.Action("Index", "Login")
        };
    }

    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EventManagement</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@homeUrl">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Login")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2025 - Event Management</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
