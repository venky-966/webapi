@model EventManagement.Model.SessionInfo

@{
    ViewData["Title"] = "Edit Session";
}

<h2>Edit Session</h2>

<form asp-action="EditSession" method="post">
    <input type="hidden" asp-for="SessionId" />

    <div class="form-group">
        <label asp-for="SessionTitle"></label>
        <input asp-for="SessionTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventId"></label>
        <input asp-for="EventId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SpeakerId"></label>
        <input asp-for="SpeakerId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="SessionStart"></label>
        <input asp-for="SessionStart" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="SessionEnd"></label>
        <input asp-for="SessionEnd" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="SessionUrl"></label>
        <input asp-for="SessionUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
