@model EventManagement.Model.SessionInfo

@{
    ViewData["Title"] = "Delete Session";
}

<h2>Delete Session</h2>

<div>
    <h4>Are you sure you want to delete this session?</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.SessionTitle</dd>

        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.SessionStart</dd>

        <dt class="col-sm-2">End</dt>
        <dd class="col-sm-10">@Model.SessionEnd</dd>
    </dl>
</div>

<form asp-action="DeleteSession" method="post">
    <input type="hidden" asp-for="SessionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
